@{
    ViewData["Title"] = "Edit Employee";
}

@model StadiumManagementSys.Models.Employee


<div class="modal-dialog">
    <div class="modal-content">
        <form asp-action="Edit" asp-controller="Employee" method="post" role="form">
            <div class="modal-header">
                <h4 class="modal-title">Edit Employee</h4>
                <a asp-action="List" asp-controller="Employee" class="close" data-dismiss="modal" aria-hidden="true">x</a>

            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="EmployeeId">EmployeeId</label>
                    <input asp-for="EmployeeId" class="form-control" placeholder="Enter Employee ID" name="EmployeeId" required="required">

                </div>

                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Employee Name" name="Name" required="required">

                </div>
                <div class="form-group">

                    <label asp-for="Email">Email</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Enter Employee Email" name="Email" required="required">
                </div>
                <div class="form-group">

                    <label asp-for="Phone">Phone</label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter Employee Phone" name="Phone" required="required">
                </div>
                <div class="form-group">

                    <label asp-for="Designation">Designation</label>
                    <input asp-for="Designation" class="form-control" placeholder="Enter Employee Designation" name="Designation" required="required">
                </div>
                <div class="form-group">

                    <label asp-for="JoiningDate">Joining Date</label>
                    <input asp-for="JoiningDate" class="form-control" placeholder="Enter Employee Joining Date" name="JoiningDate" required="required">
                </div>
                <div class="form-group">

                    <label asp-for="Salary">Salary</label>
                    <input asp-for="Salary" class="form-control" placeholder="Enter Employee Salary" name="Salary" required="required">
                </div>

            </div>
            <div class="modal-footer">
                @*<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">*@
                <input type="submit" class="btn btn-success" value="Update">
            </div>
        </form>
    </div>
</div>