@{
    ViewData["Title"] = "Add New Vendor";
}

@model StadiumManagementSys.Models.Vendor


<div class="modal-dialog">
    <div class="modal-content">
        <form asp-action="Add" asp-controller="Vendor" method="post" role="form">
            <div class="modal-header">
                <h4 class="modal-title">New Vendor</h4>
                <a asp-action="List" asp-controller="Vendor" class="close" data-dismiss="modal" aria-hidden="true">x</a>

            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="RegistrationNo">Registration No</label>
                    <input asp-for="RegistrationNo" class="form-control" placeholder="Enter Registration No" name="RegistrationNo" required="required">

                </div>

                <div class="form-group">
                    <label asp-for="OrganizationName">Organization's Name</label>
                    <input asp-for="OrganizationName" class="form-control" placeholder="Enter Organization's Name" name="OrganizationName" required="required">

                </div>
                <div class="form-group">

                    <label asp-for="OrganizationEmail">Organization's Email</label>
                    <input type="email" asp-for="OrganizationEmail" class="form-control" placeholder="Enter Organization's Email" name="OrganizationEmail" required="required">
                </div>
                <div class="form-group">

                    <label asp-for="Phone">Phone</label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter Organization's Phone Number" name="Phone" required="required">
                </div>
                <div class="form-group">

                    <label asp-for="OrganizationRegNO">Organization's Registration Number</label>
                    <input asp-for="OrganizationRegNO" class="form-control" placeholder="Enter Organization Reg. Number" name="OrganizationRegNO" required="required">
                </div>
                <div class="form-group">

                    <label asp-for="ContactDuration">Contact Duration Date</label>
                    <input asp-for="ContactDuration" class="form-control" placeholder="Enter Contact Duration Date" name="ContactDuration" required="required">
                </div>
                <div class="form-group">

                    <label asp-for="ServiceType">Service Type</label>
                    <input asp-for="ServiceType" class="form-control" placeholder="Enter ServiceType" name="ServiceType" required="required">
                </div>
                <div class="form-group">

                    <label asp-for="ServiceComment">Service Comment</label>
                    <input asp-for="ServiceComment" class="form-control" placeholder="Enter Service Comment" name="ServiceComment">
                </div>

            </div>
            <div class="modal-footer">
                @*<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">*@
                <input type="submit" class="btn btn-success" value="Add">
            </div>
        </form>
    </div>
</div>