@model StadiumManagementSys.Models.Login
@{
    ViewData["Title"] = "Login";
}

<style>
    /* Full-width input fields */
    input[type=text], input[type=password] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
    }

    /* Set a style for all buttons */
    button {
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 100%;
    }

    button:hover {
    opacity: 0.8;
    }

</style>


    <div style="font-family: Arial, Helvetica, sans-serif">
        <form  asp-controller="Home" asp-action="Login" style="background-color: #fefefe; margin: 3% auto 4% auto; border: 1px solid #888; width: 50%;">
            <div style="text-align: center; margin: 24px 0 12px 0; position: relative;">
                <img src="~/images/avater.png" alt="Avatar" style="width: 30%;height:10%; border-radius:50%;">
            </div>

            <div class="container" style="width:80%; padding: 16px;">
                <label asp-for="Email"><b>Email</b></label>
                <input asp-for="Email" type="text" placeholder="Enter Username" name="Email" required>

                <label asp-for="Password"><b>Password</b></label>
                <input asp-for="Password" type="password" placeholder="Enter Password" name="Password" required>

                <button type="submit">Login</button>
                <label>
                    <input type="checkbox" name="remember"> Remember me
                </label>
            </div>
        </form>
    </div>
